@model List<BlogGetVm>
@{
    int count = 0;
}
<div class="container">

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Blog">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#No</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            count++;
            <tr>
            <th scope="row">@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>
                <div style="width:100px">
                    <img width="100%" src="~/Upload/BlogImage/@item.ImgUrl">
                </div>
            </td>
            <td>
                <div>
                        <a class="btn btn-secondary" asp-action="Update" asp-controller="Blog" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>